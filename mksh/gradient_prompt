
typeset LUA LINE_2 shell_id

LUA=:
type lua > /dev/null && LUA=lua
type lua53 > /dev/null && LUA=lua53
type lua5.3 > /dev/null && LUA=lua5.3

LINE_2=$(echo -n "\n‚ù±")

shell_id=$$

case "$TERM" in
	st-*|*)
		PS1="\$($LUA ~/.dotfiles/lua/gradient_prompt.lua pwd=\"\$PWD\" seed=$shell_id cols=\$(tput cols))$LINE_2"
		;;
esac
