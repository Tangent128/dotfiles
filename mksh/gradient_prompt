
typeset LUA LINE_2 colors shell_id

LUA=:
type lua > /dev/null && LUA=lua
type lua53 > /dev/null && LUA=lua53
type lua5.3 > /dev/null && LUA=lua5.3


LINE_2=$(echo -n "\n‚ù±")

colors='host_red="$ps_host_red" host_green="$ps_host_green" host_blue="$ps_host_blue"'

shell_id=$$

case "$TERM" in
	st-*|*)
		PS1="\$($LUA ~/.dotfiles/lua/gradient_prompt.lua pwd=\"\$PWD\" seed=$shell_id cols=\$(tput cols) $colors)$LINE_2"
		;;
esac
